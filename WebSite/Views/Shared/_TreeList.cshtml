@{
    ViewBag.Title = "树型列表模板页";
    ViewBag.Master = "TreeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeadCssContent {
    <link rel="stylesheet" href="@Url.Content("~/Assets/Res/Css/master/treelist.css")" media="all"/>
    <link rel="stylesheet" href="@Url.Content("~/Assets/Res/Components/zTree/css/metroStyle/metroStyle.css")" media="all"/>
    @RenderSection("HeadCssContent", required: false)
}
<div id="treeList" class="layui-fluid">
    <div class="layui-row layui-col-space10">
        <div class="layui-col-md3 layui-col-sm3 layui-col-xs3 layui-col-lg3 treeArea">
            <div id="treeArea">
                <div id="treemenu-top">
                    <input type="text" class="layui-input" placeholder="搜索选项" value="" />
                </div>
                <div id="treemenu-content">
                    <ul id="menutree" class="ztree"></ul>
                </div>

            </div>
        </div>
        <div class="layui-col-md9 layui-col-sm9 layui-col-xs9 layui-col-lg9 contentArea">
            <div id="contentArea">
                <div class="col-span">
                    <button class="layui-btn layui-btn-xs qui-btn-normal col-span-btn">
                        <i class="icon-exchange"></i>
                        <span id="col-span-text">隐藏菜单</span>
                    </button>
                </div>
                <iframe frameborder="0" id="rightFrame" src="about:blank" style="width: 100%; height: 100%;"></iframe>
                @RenderBody()
            </div>
        </div>

    </div>
</div>
@section HeadContent {
    <script src="@Url.Content("~/Assets/Res/Components/zTree/js/jquery.ztree.core.js")"></script>
    <script src="@Url.Content("~/Assets/Res/Components/zTree/js/jquery.ztree.excheck.js")"></script>
    <script src="@Url.Content("~/Assets/Res/Components/zTree/js/jquery.ztree.exedit.js")"></script>
    @RenderSection("HeadContent", required: false)
}

