@{
    ViewBag.PageTitle = ViewBag.PageTitle + "-登录页面";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Modules = "Account";
    ViewBag.ModulesType = "Manager";
}
@section HeadCssContent {
    <link rel="stylesheet" href="@Url.Content("~/Assets/Res/Css/login/style.css")" media="all"/>
}

<div id="mainBody">
    <div id="cloud1" class="cloud">
    </div>
    <div id="cloud2" class="cloud">
    </div>
</div>
<div class="logintop">
    <span>@(ViewBag.AppConfig.AppName)</span>
    <ul>
    </ul>
</div>
<div class="loginbody">
    <span class="systemlogo"></span>
    <div class="loginbox">
        <ul>
            <li>
                <input id="txtUsername" class="loginuser" type="text" placeholder="用户名" />
            </li>
            <li>
                <input id="txtPassword" class="loginpwd" type="Password" placeholder="密码" />

            </li>
            <li>
                @if (ViewBag.AppConfig.EnableCookie)
                {
                    <div class="holdLogon">
                        <input type="checkbox" id="txtIsKeepLogon" name="txtIsKeepLogon" value="True" />
                        <label for="txtIsKeepLogon">记住用户名密码</label>
                    </div>
                }
                <div style="clear: both;"></div>
            </li>
            @if (ViewBag.AppConfig.UseValidateCode)
            {
                <li>
                    <input id="txtValidateCode" class="logincode" type="text" />
                    <img src='@Url.Action("GetValidateCode")' catch-src='@Url.Action("GetValidateCode")' class="imgValidateCode" id="imgValidateCode" alt="验证码"   /><!--点击图片本身更换验证码-->
                    <a>点击刷新</a> </li>
            }
            <li>
                <input id="doLog" type="button" value="登录" class="loginbtn" />

            </li>
        </ul>
    </div>
</div>
<div class="loginbm">
    @(ViewBag.AppConfig.FootTitle)
</div>
@section HeadContent
{
    <script src="@Url.Content("~/Assets/Res/Components/HS/HS.Plugs.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/Res/Components/Watermark/jquery.watermark.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var resUrl = "@(ViewBag.ReUrl)";
        var loginUrl = '@(Url.Action("LogOn"))';
        $(function () {
            $('.loginbox').css({ 'position': 'absolute', 'left': ($(window).width() - 692) / 2 });
            $(window).resize(function () {
                $('.loginbox').css({ 'position': 'absolute', 'left': ($(window).width() - 692) / 2 });
            })
        });

    </script>
}