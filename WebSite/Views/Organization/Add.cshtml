@model Manage.Core.Models.Organization_S
@{
    ViewBag.Title = "部门管理编辑";
    Layout = "~/Views/Shared/_Add.cshtml";

    ViewBag.Modules = "Organization";
    ViewBag.ModulesType = "Manager";
    ViewBag.Ext = "Add";
}

<div class="rightpart">
    @if (ViewBag.OperType == "Edit")
    {
        <fieldset class="layui-elem-field layui-field-title">
            <legend>编辑部门</legend>
        </fieldset>
    }
    else
    {
        <fieldset class="layui-elem-field layui-field-title">
            <legend>添加部门</legend>
        </fieldset>
    }

